<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateTodoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp">

            <TextView android:id="@+id/todoTaskTitle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:text="@string/todo_task_title"
                android:gravity="bottom"
                android:textSize="15sp"
                android:textAppearance="@style/QText_titles"
                tools:ignore="NestedWeights" />

            <EditText android:id="@+id/todoTaskEditText"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6"
                android:textSize="15sp"
                android:autofillHints=""
                android:inputType="text"
                android:hint="@string/todo_task_placeholder"
                android:importantForAutofill="yes"
                android:textAppearance="@style/QText_default"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp">

            <TextView android:id="@+id/todoDescriptionTitle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:text="@string/todo_description_title"
                android:gravity="bottom"
                android:textSize="15sp"
                android:textAppearance="@style/QText_titles"
                tools:ignore="NestedWeights" />

            <EditText android:id="@+id/todoDescriptionEditText"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6"
                android:textSize="15sp"
                android:autofillHints=""
                android:inputType="text"
                android:hint="@string/todo_description_placeholder"
                android:importantForAutofill="yes"
                android:textAppearance="@style/QText_default"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:weightSum="10"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <EditText android:id="@+id/dateEditText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:hint="@string/expiry_date_hint"
                android:textSize="15sp"
                android:autofillHints=""
                android:inputType="date"
                android:autoSizeTextType="uniform"
                android:importantForAutofill="yes"
                android:textAppearance="@style/QText_default"
                tools:ignore="NestedWeights" />

            <ImageButton android:id="@+id/dateButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_gravity="bottom|end"
                android:background="@drawable/button_default"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:weightSum="10"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <EditText android:id="@+id/timeEditText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:hint="@string/expiry_date_hint"
                android:textSize="15sp"
                android:autofillHints=""
                android:inputType="time"
                android:importantForAutofill="yes"
                android:textAppearance="@style/QText_default"
                tools:ignore="NestedWeights" />

            <ImageButton android:id="@+id/timeButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_gravity="bottom|end"
                android:background="@drawable/button_default"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:orientation="horizontal">

            <Button android:id="@+id/createTodoButton"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="0.3"
                android:layout_gravity="bottom"
                android:text="@string/create"
                android:textSize="20sp"
                style="@style/QText_titles"
                android:background="@drawable/button_default"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"/>

            <Button android:id="@+id/cancelTodoButton"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="0.3"
                android:layout_gravity="bottom"
                android:text="@string/cancel"
                android:textSize="20sp"
                style="@style/QText_titles"
                android:background="@drawable/button_disabled"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>